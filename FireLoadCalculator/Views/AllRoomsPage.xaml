<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FireLoadCalculator.Views.AllRoomsPage"
             xmlns:viewmodel="clr-namespace:FireLoadCalculator.Models"
             x:DataType="viewmodel:AllRooms"
             >
    <VerticalStackLayout>
        <CollectionView Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" ItemsSource="{Binding Rooms}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewmodel:Room">
                    <Grid ColumnDefinitions="60*, 20*, 20*">
                        <Grid.GestureRecognizers>
                            <!--
                            <TapGestureRecognizer 
                                   Command="{Binding Source={RelativeSource AncestorType=}, Path=TapCommand}"
                                   CommandParameter="{Binding .}"/>
                            -->
                        </Grid.GestureRecognizers>
                        <Label Text="{Binding Name}" FontSize="24" Grid.Column="0"/>
                        <Label Text="{Binding Area}" FontSize="8" Grid.Column="1"/>
                        <Label Text="TODO" FontSize="8" Grid.Column="2"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="OK" 
                Command="{Binding DisplayPopupCommand}" />
    </VerticalStackLayout>

</ContentPage>
